{
  "name": "Game Deals",
  "version": "0.3.3",
  "manifest_version": 2,
  "description": "Shows best deals when you shop for games, courtesy of isthereanydeal.com",
  "author": "Daniel Kamkha",
  "homepage_url": "https://github.com/DanielKamkha/GameDealsChrome",
  "icons": {
    "48": "images/icon-48.png"
  },
  "default_locale": "en",
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "bower_components/jquery/dist/jquery.min.js",
      "bower_components/jquery-ajax-retry/dist/jquery.ajax-retry.js",
      "scripts/chromereload.js",
      "scripts/data-consts.js",
      "scripts/data-itad.js",
      "scripts/background.js"
    ]
  },
  "page_action": {
    "default_icon": {
      "19": "images/cart-gray-19.png",
      "38": "images/cart-gray-38.png"
    },
    "default_title": "Game Deals",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "*://store.steampowered.com/app/*",
        "*://www.humblebundle.com/store*",
        "*://www.gog.com/game/*",
        "*://www.origin.com/*/store/buy/*",
        "*://www.wingamestore.com/product/*",
        "*://www.macgamestore.com/product/*"
      ],
      "css": [
        "styles/font-awesome.css",
        "styles/content-style.css"
      ],
      "js": [
        "bower_components/jquery/dist/jquery.min.js",
        "bower_components/jquery-ajax-retry/dist/jquery.ajax-retry.js",
        "scripts/data-consts.js",
        "scripts/content-scripts/data-tools.js",
        "scripts/content-scripts/data-currency.js",
        "scripts/content-scripts/data-stores.js",
        "scripts/content-scripts/data-comm-chrome.js",
        "scripts/content-scripts/script-main.js"
      ]
    },
//    {
//      "matches": [ "*://www.humblebundle.com/*" ],
//      "exclude_matches": [ "*://www.humblebundle.com/store*" ],
//      "css": [
//        "styles/font-awesome.css",
//        "styles/content-style.css"
//      ],
//      "js": [
//        "bower_components/jquery/dist/jquery.min.js",
//        "scripts/data-consts.js",
//        "scripts/content-scripts/data-tools.js",
//        "scripts/content-scripts/data-stores.js",
//        "scripts/content-scripts/data-comm-chrome.js",
//        "scripts/content-scripts/script-humble-bundle.js"
//      ]
//    },
    {
      "matches": [ "*://*/*" ],
      "include_globs": [ "*://www.gamesrocket.*" ],
      "js": [ "scripts/content-scripts/script-warning.js" ],
      "run_at": "document_start"
    }
  ]
}
